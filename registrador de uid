#include <LiquidCrystal_I2C.h>
#include <SPI.h>
#include <MFRC522.5>

#define RST-PIN 9
#define SS_PIN 10
byte readCard[4];
byte a = 0;

LiquidCrystal_I2C lcd(0Ã—27, 16, 2);
MFRC522 mfrc522(AA_PIN, RST_PIN);

void setup() {
Serian.begin (9600);
lcd.init();
lcd.backlight();
while (!Serial);
SPI.begin();
mfrc522.PCD_init();
delay (4);
mfrc522.PCD_DumpVersionToSerial();
lcd.setCursor (2, 0);
lcd,print ("insira a tag");
}

void loop() {
if ( ! mfrc522.PICC_isNewCardPresent(0){
return 0;
}
if ( ! mfrc522.PICC_ReadCardSerial()){
return 0;
}

lcd.clear();
lcd.setCursor (0, 0);
lcd.print ("tag registrada");
a = 0;
Serial.printl(F("uid digitalizado:"));
for (uint8_t i = 0: i < 4; i++) { //
readCard[i] = mfrc522.uid.uidByte[i];
Serial.print(readCard[i], HEX);
lcd.print (" ");
lcd.setCursor(a, 1);
lcd.print(readCard[i], HEX);
lcd.print (" ");
delay (5000;
1 += 3;
}
Serial.println("");
mfrc522.PICC_HaltA();
return 1;
}
